# Azure Communication Services Reference Architecture
# Environment Configuration Template
#
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# ==============================================================================
# Azure Communication Services
# ==============================================================================

# ACS endpoint (required)
# Format: https://<resource-name>.communication.azure.com
ACS_ENDPOINT=https://your-acs-resource.communication.azure.com

# ACS connection string (optional - only if not using managed identity)
# Get from Azure Portal > ACS Resource > Keys
# ACS_CONNECTION_STRING=endpoint=https://...;accesskey=...

# Use managed identity for authentication (recommended)
USE_MANAGED_IDENTITY=true

# ==============================================================================
# Azure Key Vault
# ==============================================================================

# Key Vault name for secrets storage
KEY_VAULT_NAME=kv-acs-dev-xxxx

# ==============================================================================
# Azure Cosmos DB
# ==============================================================================

# Cosmos DB endpoint (for chat history)
COSMOS_DB_ENDPOINT=https://cosmos-acs-dev-xxxx.documents.azure.com:443/

# ==============================================================================
# Application Insights
# ==============================================================================

# Application Insights connection string
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=...

# ==============================================================================
# SMS Configuration (optional)
# ==============================================================================

# Default sender phone number (must be provisioned in ACS)
# SMS_FROM_NUMBER=+1234567890

# ==============================================================================
# Development Settings
# ==============================================================================

# Flask debug mode (disable in production)
FLASK_DEBUG=1

# Logging level
LOG_LEVEL=INFO
