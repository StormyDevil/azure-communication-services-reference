{
  "name": "Azure Communication Services Reference Architecture",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "installBicep": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/powershell:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/azure/azure-dev/azd:1": {
      "version": "latest"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-bicep",
        "ms-azuretools.vscode-azurefunctions",
        "ms-azuretools.vscode-azureresourcegroups",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-vscode.powershell",
        "github.copilot",
        "github.copilot-chat",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "ms-azuretools.azure-dev"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "[bicep]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-bicep"
        },
        "[python]": {
          "editor.defaultFormatter": "ms-python.python"
        }
      }
    }
  },
  
  "postCreateCommand": "pip install -r src/api/requirements.txt && pip install -r src/functions/requirements.txt && pip install azure-communication-identity azure-communication-sms azure-communication-chat azure-communication-rooms",
  
  "forwardPorts": [5000, 7071],
  
  "portsAttributes": {
    "5000": {
      "label": "Flask API",
      "onAutoForward": "notify"
    },
    "7071": {
      "label": "Azure Functions",
      "onAutoForward": "notify"
    }
  },
  
  "remoteUser": "vscode",
  
  "containerEnv": {
    "AZURE_SUBSCRIPTION_ID": "${localEnv:AZURE_SUBSCRIPTION_ID}",
    "AZURE_TENANT_ID": "${localEnv:AZURE_TENANT_ID}"
  }
}
